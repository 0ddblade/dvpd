    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:layout_weight="1"
        android:weightSum="1"
        android:background="@color/green_color"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:text="@string/scan_device"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                />

    </LinearLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="2"
    android:weightSum="2">
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scan_msg"
        android:layout_weight="2"
        android:layout_margin="10dp"
        android:textSize="15dp"/>
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_weight="5"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/layout_btn_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".1">
            <TextView
                android:id="@+id/tv_btn_scan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Scan"
                android:textColor="@color/white_color"
                android:gravity="center"
                android:background="#00AA00"
                android:textSize="20dp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="4.9"
        android:background="@drawable/ble_search_bg"
        >
        <ListView
            android:id="@+id/Lv_scan_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

        </ListView>
    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical"
        android:weightSum="1"
        >

        <TextView
            android:id="@+id/tv_btn_main"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:text="Main"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/white_color"
            android:layout_margin="10dp"
            android:background="#00AA00"/>

    </LinearLayout>
</LinearLayout>